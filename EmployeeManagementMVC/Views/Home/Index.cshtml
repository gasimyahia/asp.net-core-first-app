@model IEnumerable<EmployeeManagementMVC.Models.Employee>


<div class="card-deck">
    @foreach (var employee in Model)
    {
    <div class="col-md-3 col-sm-12" style="float:left;">
        <div class="card m-3">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <div class="card-body">
                <img class="card-img-top" src="~/user.jfif" />
            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" asp-route-id="@employee.id"
                   class="btn btn-primary btn-sm m-1">View</a>
                <a href="#" class="btn btn-info btn-sm m-1">Edit</a>
                <a href="#" class="btn btn-danger btn-sm m-1">Delete</a>
            </div>
        </div>
    </div>
    }
</div>
